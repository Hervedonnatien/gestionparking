{% extends 'base.html.twig' %} {% block body %}
<div class="container">
  {% for message in app.flashes('success') %}
  <div class="alert alert-success">
    {{ message }}
  </div>
  {% endfor %}
  <div class="row justify-content-center ml-6">
    <div
      class="col-md-5 super"
      style="margin-top: 100px"
      onmouseenter="animationMouseEnter()"
      onmouseleave="animationMouseLeave()"
    >
      <div style="text-align: center">
        <span class="logo-login">
          <img
            src="{{ asset('photos/images/logo.jpg') }}"
            width="100px"
            height="100px"
            style="border-radius: 50px"
          />
        </span>
      </div>

      <div class="container link-div">
        <a
          href="{{ path('security_registration') }}"
          class="link link-flotat-right"
          >Créer un compte</a
        >
        <br />
        <a
          href="{{ path('edit_password') }}"
          class="link link-flotat-right text-danger"
          >Mot de passe oublié</a
        >
      </div>

      <div class="bg-shadow bg-light">
        <br />
        {% if error %}
        <div class="alert alert-danger">
          {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
        {% endif %}
        <br />
        <form action="/login" method="post" class="form-class">
          <div class="form-group row">
            <label
              for="email"
              class="col-md-3 col-form-label text-md-left"
              style="font-size: 12px"
              >E-mail :</label
            >

            <div class="col-md-9">
              <input
                type="email"
                id="email"
                placeholder="Adresse email..."
                value="{{ last_username }}"
                name="email"
                id="inputEmail"
                class="input-text"
                required
                autofocus
                onfocus="document.querySelector('.input-text').style.borderBottomColor='#7a0889'"
              />
            </div>
          </div>

          <div class="form-group row">
            <label
              for="password"
              class="col-md-3 col-form-label text-md-left"
              style="font-size: 12px"
              >Mot de passe :</label
            >
            <div class="col-md-9">
              <input
                id="password"
                placeholder="Mot de passe"
                type="password"
                class="input-text2"
                required
                name="password"
                onfocus="document.querySelector('.input-text2').style.borderBottomColor='#7a0889'"
              />
            </div>
            <input type="hidden" name="_csrf_token" value="{{
              csrf_token("authenticate")
            }}"
          </div>
          <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-">
              <button type="submit" class="btn-custom">Connexion</button>
            </div>
            <br />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
