{% extends 'base.html.twig' %} {% block body %}
<div class="container">
    <div class="row justify-content-center mt-lg-5">
        <div class="col-md-6 super " 
        style="background-color: #fff;margin-top: 30px" 
        >
            <div style="text-align: center;">
                <span class="logo-login">
                    <img 
                    src="{{ asset('photos/images/logo.jpg') }}" 
                    width="100px" 
                    height="100px" 
                    style="border-radius: 50px"
                    />
                </span>
            </div>

            <div class="container link-div">
                <a href="{{ path('app_login') }}" class="link link-flotat-right">Se connecter</a>
            </div>
            <div class=" bg-shadow bg-light " style="padding-top: 20px">
                    {{ form_start(form) }}
                    {{ form_row(form.email,{'attr': {'placeholder': 'Adresse email...'}}) }}
                    {{ form_row(form.password,{'attr': {'placeholder': 'Mots de passe...'}}) }}
                    {{ form_row(form.confirm_password,{'attr': {'placeholder': 'Confirmer mots de passe...'
                    }}) }}
                    <button type="submit" class="btn btn-success">Inscription!</button>
                    {{ form_end(form) }}
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}